{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build solution",
            "type": "shell",
            "command": "dts devel build -H `hostname`.local -f"
        },
        {
            "label": "run solution",
            "type": "shell",
            "command": "dts devel run -s -H `hostname`.local -n dts-run-solution"
        },
        {
            "label": "stop solution",
            "type": "shell",
            "command": "docker -H `hostname`.local stop -t 2 dts-run-solution"
        }
    ]
 }
