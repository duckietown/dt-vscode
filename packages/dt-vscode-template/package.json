{
  "name": "dt-vscode-template",
  "displayName": "dt-vscode-template",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
			"activitybar": [
				{
					"id": "dt-vscode",
					"title": "Duckietown template utils",
					"icon": "media/icon1.svg"
				}
			]
		},
		"views": {
			"dt-vscode": [
				{
					"id": "commands",
					"name": "Commands",
					"icon": "media/icon1.svg",
					"contextualTitle": "Duckietown template commands"
				}
			]
		},
    "viewsWelcome": [
      {
        "view": "commands",
        "contents": "Functionality for working with solutions on the bot.\nBuild solution on a bot.\n[Build](command:dt-vscode-template.build)\nRun solution on a bot.\n[Run](command:dt-vscode-template.run)\nStop solution on a bot.\n[Stop](command:dt-vscode-template.stop)\nRestart bot interface solution on a bot.\n[Restart interface](command:dt-vscode-template.restart)\n\n"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
